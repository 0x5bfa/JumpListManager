<ContentDialog
	x:Class="JumpListManager.Views.AboutDialog"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:JumpListManager.Views"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Title="About"
	PrimaryButtonText="OK"
	Style="{StaticResource DefaultContentDialogStyle}"
	mc:Ignorable="d">

	<StackPanel Spacing="4">

		<StackPanel Margin="0,0,0,4">
			<TextBlock Text="Jump List Viewer" />
			<TextBlock Text="Copyright Â© 2025 0x5BFA." />
		</StackPanel>

		<HyperlinkButton Content="GitHub repository" Style="{StaticResource TextBlockButtonStyle}" />
		<HyperlinkButton Content="Release notes" Style="{StaticResource TextBlockButtonStyle}" />
		<HyperlinkButton Content="Privacy policy" Style="{StaticResource TextBlockButtonStyle}" />
		<HyperlinkButton Content="Third-party notice" Style="{StaticResource TextBlockButtonStyle}" />
	</StackPanel>
</ContentDialog>
